<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background_light"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/foreign_word2"
        android:layout_width="234dp"
        android:layout_height="62dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="Learning Now!"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/foreign_word"
        android:layout_width="324dp"
        android:layout_height="60dp"
        android:layout_marginTop="288dp"
        android:background="#5DA3F6"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="ANY ENGLISH WORD"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:circularflow_angles="5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextContrastCheck" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="299dp"
        android:layout_height="45dp"
        android:layout_marginTop="384dp"
        android:background="@drawable/main_input_light"
        android:backgroundTintMode="add"
        android:ems="10"
        android:hint="Translate"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textColorHint="#D3D3D3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageButton
        android:id="@+id/dict_btn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="212dp"
        android:background="#00FFFFFF"
        android:focusable="auto"
        android:scaleType="centerCrop"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.164"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName"
        app:srcCompat="@drawable/dictionary_light"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/change_mode"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="212dp"
        android:layout_marginEnd="64dp"
        android:background="#00FFFFFF"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName"
        app:srcCompat="@drawable/night"
        tools:ignore="SpeakableTextPresentCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>